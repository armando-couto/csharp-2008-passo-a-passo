<Window x:Class="Tokenizer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    Title="Color Syntax" Height="300" Width="500">
    <Grid>
        <Button Height="23" Margin="216,0,201,9" Name="open" VerticalAlignment="Bottom" Click="openClick">Open</Button>
        <RichTextBox Margin="10,10,10,40" Name="codeText" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
    </Grid>
</Window>
